body
  background-image url('/images/book.jpg')
  background-size cover
  background-position center center

.title
  margin 16px 0 0
  color #FFD61B
  text-align center
  font-size 100px
  font-family Times-Roman, sans-serif

.subtitle
  margin 0
  display flex
  flex-direction row
  i
    flex 1
    border 1px solid #fff
    height 0
    align-self center
  h2
    flex 1
    color white
    font-size 25px
    text-align center
    font-family Times-Roman
  
.gravatarWarper
  width 100%
  text-align center
  padding-top 130px
    
  
.menu
  text-align center
  margin 0
  padding 30px 0
  li
    display inline-block
    list-style-type none
    padding 0 56px
    a
      color: #1BB0FF
      display: flex
      flex-direction column
      i
        margin-bottom 24px
      span
        font-size 24px
        color #fff
      
      &:active, &:hover
        i
          text-shadow 1px 1px 2px #fff
        span
          color #EFEEEE